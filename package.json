{
  "name": "spotify-lyrics",
  "version": "1.0.0",
  "description": "An overlay for Spotify that displays real-time lyrics for the currently playing song",
  "main": "build/main/index.js",
  "scripts": {
    "dev": "concurrently \"tsc -w\" \"electron .\"",
    "build": "rimraf build && tsc",
    "start": "npm run build && electron ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikareich/spotify-lyrics.git"
  },
  "author": "Mika Reich",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mikareich/spotify-lyrics/issues"
  },
  "homepage": "https://github.com/mikareich/spotify-lyrics#readme",
  "dependencies": {
    "electron": "^26.0.0",
    "electron-reloader": "^1.2.3",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.1.6"
  }
}
